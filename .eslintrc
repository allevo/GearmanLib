{
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 5,
		"sourceType": "module"
	},
    "env": {
    	"node": true
    },
	"rules": {
		"comma-dangle": ["error", "always-multiline"],
		"indent": ["error", 2],
		"no-console": ["error", { allow: ["warn", "error"] }]
	},
	"globals": {
		"Set": true,
		"Promise": true
	}
}
